{
  "extends": ["vaadin", "prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Polymer": false,
    "Vaadin": false,
    "vis": false
  },
  "parser": "babel-eslint",
  "plugins": ["html"],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "max-len": ["error", { "code": 120 }]
  }
}
